FROM youken9980/alpine:3-glibc as temp

ENV JAVA_HOME="/opt/java/openjdk"

# https://github.com/adoptium/temurin8-binaries/releases/download/jdk8u362-b09/OpenJDK8U-jre_x64_alpine-linux_hotspot_8u362b09.tar.gz
RUN set -eux && \
    GITHUB_MIRROR="https://ghps.cc/https://github.com" && \
    JDK_MAJOR="8" && \
    JDK_VERSION="362" && \
    JDK_BUILD="09" && \
    \
    wget -O /tmp/openjdk.tar.gz ${GITHUB_MIRROR}/adoptium/temurin${JDK_MAJOR}-binaries/releases/download/jdk${JDK_MAJOR}u${JDK_VERSION}-b${JDK_BUILD}/OpenJDK${JDK_MAJOR}U-jre_x64_alpine-linux_hotspot_${JDK_MAJOR}u${JDK_VERSION}b${JDK_BUILD}.tar.gz && \
    wget -O /tmp/openjdk.tar.gz.sha256.txt ${GITHUB_MIRROR}/adoptium/temurin${JDK_MAJOR}-binaries/releases/download/jdk${JDK_MAJOR}u${JDK_VERSION}-b${JDK_BUILD}/OpenJDK${JDK_MAJOR}U-jre_x64_alpine-linux_hotspot_${JDK_MAJOR}u${JDK_VERSION}b${JDK_BUILD}.tar.gz.sha256.txt && \
    echo "$(cat /tmp/openjdk.tar.gz.sha256.txt | awk '{ print $1 }') */tmp/openjdk.tar.gz" | sha256sum -c - && \
    mkdir -p ${JAVA_HOME} && \
    tar -zxvf /tmp/openjdk.tar.gz -C ${JAVA_HOME} --strip-components=1 --no-same-owner




FROM youken9980/alpine:3-glibc
LABEL maintainer="YangJian <youken9980@163.com>"

# Default to UTF-8 file.encoding
ENV LANG='en_US.UTF-8' LANGUAGE='en_US:en' LC_ALL='en_US.UTF-8'
ENV JAVA_HOME="/opt/java/openjdk"
ENV PATH=".:$PATH:$JAVA_HOME/bin"

RUN apk --update --no-cache add fontconfig libretls musl-locales musl-locales-lang ttf-dejavu tzdata zlib
# ENV JAVA_HOME="/usr/lib/jvm/java-1.8-openjdk"
# RUN apk --update --no-cache add openjdk8-jre

COPY --chown=root:root --from=temp ${JAVA_HOME} ${JAVA_HOME}
